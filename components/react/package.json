{
  "name": "@zalify-ui/react",
  "version": "0.1.0",
  "description": "Beautifully designed React components built with Ark UI and Panda CSS",
  "type": "module",
  "sideEffects": false,
  "license": "MIT",
  "author": {
    "name": "zalifyui",
    "url": "https://x.com/zalifyui"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zalify/zalify-ui.git",
    "directory": "components/react"
  },
  "homepage": "https://ui.zalify.com",
  "bugs": {
    "url": "https://github.com/zalify/zalify-ui/issues"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "design-system",
    "panda-css",
    "ark-ui",
    "zalify-ui"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prepare": "panda codegen --clean --silent",
    "build:codegen": "panda codegen --clean",
    "build:css": "panda cssgen --outfile temp/styles.css && node scripts/embed-css.mjs",
    "build:js": "tsup && node scripts/add-use-client.mjs && node scripts/rewrite-barrel.mjs && node scripts/fix-dts.mjs",
    "build": "bun run build:codegen && bun run build:css && bun run build:js",
    "dev": "bun run storybook",
    "lint": "biome lint ./src",
    "storybook": "storybook dev -p 6006",
    "typecheck": "tsc",
    "registry:prepare": "scripts registry prepare --name @zalify-ui/react",
    "registry:build": "scripts registry build react",
    "typedoc": "scripts typedoc --out ../../website/public/types/react"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./examples": "./src/examples/index.ts"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "@ark-ui/react": "5.32.0",
    "lucide-react": "0.575.0"
  },
  "devDependencies": {
    "@pandacss/dev": "1.8.2",
    "@pandacss/preset-base": "1.8.2",
    "@pandacss/preset-panda": "1.8.2",
    "@storybook/addon-a11y": "10.2.12",
    "@storybook/addon-themes": "10.2.12",
    "@storybook/react": "10.2.12",
    "@storybook/react-vite": "10.2.12",
    "@tanstack/react-virtual": "3.13.19",
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "5.1.4",
    "@zalify-ui/preset": "workspace:*",
    "@zalify-ui/scripts": "workspace:*",
    "lorem-ipsum": "2.0.8",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "storybook": "10.2.12",
    "tsup": "8.5.1",
    "typescript": "5.9.3",
    "vite": "7.3.1",
    "vite-tsconfig-paths": "6.1.1"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  }
}
