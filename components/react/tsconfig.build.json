{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
      "styled-system/*": ["./styled-system/*"]
    },
    "declaration": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "outDir": "dist"
  },
  "include": [
    "src/components/ui/**/*.ts",
    "src/components/ui/**/*.tsx",
    "src/generated/**/*.ts",
    "styled-system/**/*.d.ts"
  ]
}
